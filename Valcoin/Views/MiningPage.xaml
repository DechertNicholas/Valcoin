<Page
    x:Class="Valcoin.Views.MiningPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Valcoin.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    NavigationCacheMode="Required">

    <StackPanel Margin="10">
        <TextBlock Text="Mining Page" Margin="5"/>
        
        <Button Content="Start"
                Click="Button_Click" Margin="5"/>
        
        <Button Content="Stop" Margin="5"/>
        <TextBox x:Name="TestTextBox" TextChanged="TextBox_TextChanged"/>
        <TextBlock x:Name="TestTextBlock"/>
    </StackPanel>
</Page>
